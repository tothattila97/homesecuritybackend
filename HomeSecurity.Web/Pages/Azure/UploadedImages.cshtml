@page
@model HomeSecurity.Web.Pages.Azure.UploadedImagesModel
@{
    ViewData["Title"] = "UploadedImages";
}

<h2>UploadedImages</h2>

<div class="container body-content">
    @{
        var model = "//via.placeholder.com/350x150";

        <div class="row">
            <div class="col-lg-6">
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <td>Kép</td>
                            <td>Másik oszlop</td>
                            <td>Művelet</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Enumerable.Range(1, 10))
                        {
                            <tr>
                                <td class="text-center">
                                    <img src="@(model)" />
                                </td>
                                <td>Attila</td>
                                <td>
                                    <button class="btn btn-danger">Törlés</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-lg-6">
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <td>Kép</td>
                            <td>Másik oszlop</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Enumerable.Range(1, 10))
                        {
                            <tr>
                                <td class="text-center">
                                    <img src="@(model)" />
                                </td>
                                <td>Attila</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>


    }
    <hr />
    <footer>
        <p>&copy; 2018 - HomeSecurity</p>
    </footer>
</div>